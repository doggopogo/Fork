<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/HomeLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbackgroundgradientcolor"
    android:orientation="horizontal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/LogoConstraintLayout"
        android:layout_width="246dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="113dp"
            android:layout_height="132dp"
            android:src="@drawable/logo_legion_keh_2x"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.503" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/FormConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="150px"
        android:paddingTop="30px"
        android:paddingRight="150px"
        android:paddingBottom="30px">

        <TextView
            android:id="@+id/LoginScreenFitnessHabits"
            style="@style/LoginAppTitle_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/app_name_Habits"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="se connecter"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/LoginScreenFitnessHabits" />

        <EditText
            android:id="@+id/LoginNameInp"
            android:layout_width="295dp"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/login_input_text_border_bottom_selector"
            android:ems="10"
            android:hint="Nom d'utilisateur"
            android:inputType="text"
            android:paddingLeft="30px"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.515"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <EditText
            android:id="@+id/PasswordInp"
            android:layout_width="295dp"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/login_input_text_border_bottom_selector"
            android:ems="10"
            android:hint="Mot de passe"
            android:inputType="text"
            android:paddingLeft="30px"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/LoginNameInp" />

        <TextView
            android:id="@+id/MotDePasseTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:height="48dp"
            android:clickable="true"
            android:text="Mot de passe oubliÃ©"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.812"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/PasswordInp" />

        <Button
            android:id="@+id/SinscrireBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="40dp"
            android:backgroundTint="@color/white"
            android:text="s'inscrire"
            android:textColor="@color/text"
            app:layout_constraintBottom_toBottomOf="@+id/SeConnecterBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/SeConnecterBtn"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/SeConnecterBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Se connecter"
            app:layout_constraintEnd_toStartOf="@+id/SinscrireBtn"
            app:layout_constraintHorizontal_bias="0.214"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/MotDePasseTv" />

        <Button
            android:id="@+id/FacebookBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#1B74E4"
            android:text="facebook"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SeConnecterBtn" />

        <Button
            android:id="@+id/GoogleBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/white"
            android:text="Google"
            android:textColor="@color/text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.739"
            app:layout_constraintStart_toEndOf="@+id/FacebookBtn"
            app:layout_constraintTop_toBottomOf="@+id/SinscrireBtn" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>