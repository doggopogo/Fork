<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbackgroundgradientcolor"
    android:orientation="horizontal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/logoConstraintLayout"
        android:layout_width="270dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="158dp"
            android:layout_height="155dp"
            android:src="@drawable/logo_legion_keh_2x"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/divider2"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadeScrollbars="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/formConstraintLayout"
                android:layout_width="match_parent"
                android:layout_height="611dp"
                android:paddingLeft="130px"
                android:paddingTop="30px"
                android:paddingRight="130px"
                android:paddingBottom="30px">

                <TextView
                    android:id="@+id/loginScreenFitnessHabits"
                    style="@style/LoginAppTitle_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="@string/app_name_Habits"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="se connecter"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="@+id/loginScreenFitnessHabits"
                    app:layout_constraintStart_toStartOf="@+id/loginScreenFitnessHabits"
                    app:layout_constraintTop_toBottomOf="@+id/loginScreenFitnessHabits" />

                <!-- <EditText
            android:id="@+id/LoginNameInp"
            android:layout_width="295dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/login_input_text_border_bottom_selector"
            android:ems="10"
            android:hint="Nom d'utilisateur"
            android:inputType="text"
            android:paddingLeft="30px"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="@+id/textView2"
            app:layout_constraintHorizontal_bias="0.486"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView2" /> -->

                <!-- <EditText
            android:id="@+id/PasswordInp"
            android:layout_width="295dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/login_input_text_border_bottom_selector"
            android:ems="10"
            android:hint="Mot de passe"
            android:inputType="text|textPassword"
            android:paddingLeft="30px"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="@+id/LoginNameInp"
            app:layout_constraintStart_toStartOf="@+id/LoginNameInp"
            app:layout_constraintTop_toBottomOf="@+id/LoginNameInp" /> -->

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/loginNameInpLayout"
                    android:layout_width="295dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:textColorHint="@color/white"
                    app:boxStrokeColor="@color/white"
                    app:boxStrokeWidth="0dp"
                    app:errorEnabled="true"
                    app:hintTextColor="@color/white"
                    app:layout_constraintEnd_toEndOf="@+id/textView2"
                    app:layout_constraintStart_toStartOf="@+id/textView2"
                    app:layout_constraintTop_toTopOf="@+id/textView2">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/loginNameInp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/login_input_text_border_bottom_selector"
                        android:hint="Nom d'utilisateur"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textColorHighlight="@color/white"
                        android:textColorHint="@color/white"
                        android:textColorLink="@color/white" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/passwordInpLayout"
                    android:layout_width="295dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:backgroundTint="@android:color/transparent"
                    android:textColorHint="@color/white"
                    app:boxStrokeColor="@color/white"
                    app:boxStrokeWidth="0dp"
                    app:errorEnabled="true"
                    app:hintTextColor="@color/white"
                    app:layout_constraintEnd_toEndOf="@+id/loginNameInpLayout"
                    app:layout_constraintStart_toStartOf="@+id/loginNameInpLayout"
                    app:layout_constraintTop_toBottomOf="@+id/loginNameInpLayout"
                    app:passwordToggleEnabled="false"
                    app:passwordToggleTint="@color/white">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/passwordInp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/login_input_text_border_bottom_selector"
                        android:hint="Mot de passe"
                        android:inputType="text|textPassword"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textColorHighlight="@color/white"
                        android:textColorHint="@color/white"
                        android:textColorLink="@color/white" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/passwordForgotten"
                    android:layout_width="220dp"
                    android:layout_height="57dp"
                    android:layout_marginTop="40dp"
                    android:height="48dp"
                    android:padding="10dp"
                    android:text="Mot de passe oubliÃ©"
                    android:textAlignment="textEnd"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="@+id/passwordInpLayout"
                    app:layout_constraintTop_toBottomOf="@+id/passwordInpLayout" />

                <Button
                    android:id="@+id/FacebookBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#1B74E4"
                    android:drawableLeft="@drawable/logo_rseau_fb"
                    android:text="Facebook"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/connectionBtn"
                    app:layout_constraintTop_toBottomOf="@+id/connectionBtn"
                    app:layout_constraintVertical_bias="0.4" />

                <Button
                    android:id="@+id/inscriptionBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:backgroundTint="@color/white"
                    android:text="S'inscrire"
                    android:textColor="@color/text"
                    app:layout_constraintBottom_toBottomOf="@+id/connectionBtn"
                    app:layout_constraintEnd_toEndOf="@+id/passwordForgotten"
                    app:layout_constraintTop_toTopOf="@+id/connectionBtn"
                    app:layout_constraintVertical_bias="1.0" />

                <Button
                    android:id="@+id/connectionBtn"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:backgroundTint="@android:color/transparent"
                    android:text="Se connecter"
                    app:layout_constraintEnd_toStartOf="@+id/inscriptionBtn"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/passwordInpLayout"
                    app:layout_constraintTop_toBottomOf="@+id/passwordForgotten"
                    app:strokeColor="@color/white"
                    app:strokeWidth="4px" />

                <Button
                    android:id="@+id/GoogleBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:drawableLeft="@drawable/logo_rseau_gg"
                    android:text="Google"
                    android:textColor="@color/text"
                    app:layout_constraintBottom_toBottomOf="@+id/FacebookBtn"
                    app:layout_constraintEnd_toEndOf="@+id/inscriptionBtn"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/FacebookBtn"
                    app:layout_constraintTop_toTopOf="@+id/FacebookBtn"
                    app:layout_constraintVertical_bias="0.0" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>